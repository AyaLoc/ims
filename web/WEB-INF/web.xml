<?xml version="1.0" encoding="UTF-8"?>
<web-app version="5.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd">
    <servlet>
        <servlet-name>StudentMailboxServlet</servlet-name>
        <servlet-class>controller.StudentMailboxServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ModerateReviewsServlet</servlet-name>
        <url-pattern>/ModerateReviewsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentMailboxServlet</servlet-name>
        <url-pattern>/StudentMailboxServlet</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>views/login.jsp</welcome-file>
    </welcome-file-list>
    <!-- Login -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModerateReviewsServlet</servlet-name>
        <servlet-class>controller.ModerateReviewsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <!-- Register -->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>
    <!-- Logout -->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <!-- Post Internship -->
    <servlet>
        <servlet-name>PostInternshipServlet</servlet-name>
        <servlet-class>controller.PostInternshipServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PostInternshipServlet</servlet-name>
        <url-pattern>/PostInternshipServlet</url-pattern>
    </servlet-mapping>
    <!-- Delete Internship -->
    <servlet>
        <servlet-name>DeleteInternshipServlet</servlet-name>
        <servlet-class>controller.DeleteInternshipServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteInternshipServlet</servlet-name>
        <url-pattern>/DeleteInternshipServlet</url-pattern>
    </servlet-mapping>
    <!-- Manage Applications -->
    <servlet>
        <servlet-name>ManageApplicationsServlet</servlet-name>
        <servlet-class>controller.ManageApplicationsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ManageApplicationsServlet</servlet-name>
        <url-pattern>/ManageApplicationsServlet</url-pattern>
    </servlet-mapping>
    <!-- View Internships (Single Declaration Only) -->
    <servlet>
        <servlet-name>ViewInternshipsServlet</servlet-name>
        <servlet-class>controller.ViewInternshipsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewInternshipsServlet</servlet-name>
        <url-pattern>/ViewInternshipsServlet</url-pattern>
    </servlet-mapping>
    <!-- Browse Internships -->
    <servlet>
        <servlet-name>BrowseInternshipsServlet</servlet-name>
        <servlet-class>controller.BrowseInternshipsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BrowseInternshipsServlet</servlet-name>
        <url-pattern>/BrowseInternshipsServlet</url-pattern>
    </servlet-mapping>
    <!-- Apply Internship -->
    <servlet>
        <servlet-name>ApplyInternshipServlet</servlet-name>
        <servlet-class>controller.ApplyInternshipServlet</servlet-class>
        <multipart-config>
            <max-file-size>5242880</max-file-size>
            <max-request-size>10485760</max-request-size>
            <file-size-threshold>1048576</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>ApplyInternshipServlet</servlet-name>
        <url-pattern>/ApplyInternshipServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>TrackApplicationsServlet</servlet-name>
        <servlet-class>controller.TrackApplicationsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TrackApplicationsServlet</servlet-name>
        <url-pattern>/TrackApplicationsServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SubmitReviewServlet</servlet-name>
        <servlet-class>controller.SubmitReviewServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SubmitReviewServlet</servlet-name>
        <url-pattern>/SubmitReviewServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AdminUserManagementServlet</servlet-name>
        <servlet-class>controller.AdminUserManagementServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminUserManagementServlet</servlet-name>
        <url-pattern>/AdminUserManagementServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ReviewReplyServlet</servlet-name>
        <servlet-class>controller.ReviewReplyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReviewReplyServlet</servlet-name>
        <url-pattern>/ReviewReplyServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ViewReviewsServlet</servlet-name>
        <servlet-class>controller.ViewReviewsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewReviewsServlet</servlet-name>
        <url-pattern>/ViewReviewsServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>MonitorSystemServlet</servlet-name>
        <servlet-class>controller.MonitorSystemServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MonitorSystemServlet</servlet-name>
        <url-pattern>/MonitorSystemServlet</url-pattern>
    </servlet-mapping>
</web-app>
